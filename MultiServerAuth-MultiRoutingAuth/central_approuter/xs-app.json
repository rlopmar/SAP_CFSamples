{
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/api/one/(.*)",
            "target": "/$1",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.routing_one_api",
            "destination": "one_api_dest",
            "csrfProtection": false
        },
        {
            "source": "^/api/two/(.*)",
            "target": "/$1",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.routing_two_api",
            "destination": "two_api_dest",
            "csrfProtection": false
        }
    ]
}